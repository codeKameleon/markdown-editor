{
  "env": {
    "browser": true,
    "es6": true,
    "jasmine": true
  },
  "extends": ["airbnb", "prettier/react"],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "rules": {
    "linebreak-style": 0,
    "comma-dangle": ["error", "never"],
    "semi": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "arrowParens": "always"
      }
    ],
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [".js", ".jsx"]
      }
    ]
  }
}
